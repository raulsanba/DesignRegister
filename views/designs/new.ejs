<% include .././partials/header %>
<div class="container d-flex justify-content-center">
    <div class="jumbotron">
         <div class="display-3">Add new design</div>
         
         <form class="needs-validation" action="/designs" method="POST" id="form-designs" novalidate>
             <div class="form-group" >
                <label>Region</label>
                <select class="form-control" id="validationCustom01" name="design[region]" placeholder="Region" required>
                    <option value="">Choose a Region...</option>
                    <option value="UK">UK</option>
                    <option value="China">China</option>
                    <option value="Usa">USA</option>
                </select>    
                <div class="invalid-feedback">
                    Please choose a Region!
                </div>
             </div>   
             <div class="form-group" >
                <label>Sharepoint ID</label>
                <input type="number" min="0" step="1" class="form-control" id="validationCustom01" name="design[sharepointid]" placeholder="Sharepoint ID" required>
                <div class="invalid-feedback">
                        Please enter a Sharepoint ID!
                </div>
             </div>
             <div class="form-group">
                <label>Design id</label>    
                <input type="text" class="form-control" id="validationCustom01" name="design[designid]" placeholder="Design id" required>
                <div class="invalid-feedback">
                        Please enter a Design id!
                </div>
             </div>   
            <div class="form-group">
                <label>SAP number</label>    
                <input type="text" class="form-control" id="validationCustom01" name="design[sapnum]" placeholder="SAP number" required>
                <div class="invalid-feedback">
                        Please enter a SAP number!
                </div>
             </div>  
             <div class="form-group" >
                    <label>Sales order number</label>
                    <input type="number" min="0" step="1" class="form-control" id="validationCustom01" name="design[so]" placeholder="Sales order number" required>
                    <div class="invalid-feedback">
                            Please enter a Sales order number!
                    </div>
                 </div>
             <div class="form-group">
                <label>Type</label>
                <select class="form-control" id="validationCustom01" name="design[type]" required>
                        <option value="">Choose a type...</option>
                        <option value="Standard">Standard system</option>
                        <option value="Special">Special system</option>
                    </select>
                <div class="invalid-feedback">
                        Please choose a Type!
                </div>
            </div> 
            <div class="form-group">
                    <label>Head type</label>    
                    <input type="text" class="form-control" id="validationCustom01" name="design[headtype]" placeholder="Head type" required>
                    <div class="invalid-feedback">
                            Please choose a Head type!
                    </div>
                </div>  
            <div class="form-group">
                <label>Aperture width</label>    
                <input type="number" class="form-control" id="validationCustom01" name="design[apwidth]" placeholder="Aperture width" required>
                <div class="invalid-feedback">
                        Please enter an Aperture width!
                </div>
            </div>
            <div class="form-group">
                <label>Aperture height</label>    
                <input type="text" class="form-control" id="validationCustom01" name="design[apheight]" placeholder="Aperture height" required>
                <div class="invalid-feedback">
                        Please enter an Aperture height!
                </div>
            </div>     
            <div class="form-group">
                <label>System type</label> 
                    <select class="form-control" id="validationCustom01" name="design[systemtype]" required>
                        <option value="">Choose a system type...</option>
                        <option value="Series 80">Series 80</option>
                        <option value="Series 200">Series 200</option>
                    </select>
                    <div class="invalid-feedback">
                            Please choose a System type!
                    </div>   
            </div>    
            <div class="form-group">
                <label>Reject system</label> 
                    <select class="form-control" id="validationCustom01" name="design[reject]" required>
                        <option value="">Choose a reject system...</option>
                        <option value="Stop alarm">Stop Alarm</option>
                        <option value="Air blast md">Air blast MD</option>
                        <option value="Air blast hd">Air blast HD</option>
                        <option value="Punch push">Punch/Push</option>
                        <option value="Overhead sweep">Overhead sweep</option>
                        <option value="Retracting band">Retracting band</option>
                        <option value="Lift flap">Lift flap</option>
                        <option value="Drop flap">Drop flap</option>
                        <option value="Special reject">Other (specify on "notes" area)</option>
                    </select>
                    <div class="invalid-feedback">
                            Please choose a System type!
                    </div>   
            </div>    
            <div class="form-group">
                <label>Conveyor infeed height</label>    
                <input type="number" class="form-control" id="validationCustom01" name="design[convinheight]" placeholder="Conveyor infeed height" required>
                <div class="invalid-feedback">
                        Please enter a Conveyor height!
                </div>
             </div>   
             <div class="form-group">
                <label>Conveyor outfeed height</label>    
                <input type="number" class="form-control" id="validationCustom01" name="design[convoutheight]" placeholder="Conveyor outfeed height" required>
                <div class="invalid-feedback">
                        Please enter a Conveyor height!
                </div>
             </div>  
            <div class="form-group">
                <label>Conveyor length</label>    
                <input type="text" class="form-control" id="validationCustom01" name="design[convlength]" placeholder="Conveyor length" required>
                <div class="invalid-feedback">
                        Please enter a Conveyor length!
                </div>
            </div>    
            <div class="form-group">
                <label>Handing</label>    
                <select class="form-control" id="validationCustom01" name="design[handing]" required>
                        <option value="">Choose a handing...</option>
                        <option value="left hand">Left hand</option>
                        <option value="right hand">Right hand</option>
                </select>        
                <div class="invalid-feedback">
                        Please choose a Handing!
                </div>
             </div>   
            <div class="form-group">
                <label>Belt type</label>    
                <select class="form-control" id="validationCustom01" name="design[belttype]" required>
                        <option value="">Choose a belt...</option>
                        <option value="PU">PU</option>
                        <option value="MOD">MOD</option>
                </select> 
                <div class="invalid-feedback">
                        Please choose a Belt type!
                </div>
             </div>
            <div class="form-group">
                <label>MO agent</label>
                <input type="text" class="form-control" id="validationCustom01" name="design[moagent]" placeholder="MO agent" required>
                <div class="invalid-feedback">
                        Please enter a MO agent!
                </div>
            </div>
            <div class="form-group">
                <label>End user</label>    
                <input type="text" class="form-control" id="validationCustom01" name="design[enduser]" placeholder="End user" required>
                <div class="invalid-feedback">
                        Please enter an End user!
                </div>
            </div>
            <div class="form-group">
                <label>Product</label>    
                <input type="text" class="form-control" id="validationCustom01" name="design[product]" placeholder="Product" required>
                <div class="invalid-feedback">
                        Please enter a Product!
                </div>
            </div>    
            <div class="form-group">
                <label>Packaging</label>    
                <input type="text" class="form-control" id="validationCustom01" name="design[packaging]" placeholder="Packaging" required>
                <div class="invalid-feedback">
                        Please enter a Packaging!
                </div>
             </div>  
            <div class="form-group">
                <label>Notes</label>    
                <textarea class="form-control" name="design[notes]"></textarea>
            </div>
            <div class="form-group">
                <label>Date</label>    
                <input type="date" class="form-control" id="validationCustom01" name="design[date]" placeholder="Date" required >
                <div class="invalid-feedback">
                        Please enter a Date!
                </div>
            </div>
            <div class="form-group">
                <label>Engineer</label>    
                <input type="text" class="form-control" id="validationCustom01" name="design[engineer]" placeholder="Engineer" required>
                <div class="invalid-feedback">
                        Please enter an Engineer!
                </div>
            </div>   
            <div class="form-group">
                <button type="submit" class="btn btn-outline-info btn-block ">SAVE</button>
                
            </div>     
         </form>
    </div>
</div>    
    
<% include .././partials/footer %>    