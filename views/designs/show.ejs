<% include .././partials/header %>
<div class="container p-5">
    <div class="card text-center">
        <div class="card-header">
            <h1>Design details</h1>
        </div>
        <div class="card-body">
            <p><strong>Region:</strong>  <%= design.region %></p>
            <p><strong>Sharepoint ID:</strong>  <%= design.sharepointid %></p>
            <p><strong>Sales order number:</strong>  <%= design.so %></p>
            <p><strong>Design id:</strong>  <%= design.designid %></p>
            <p><strong>SAP number:</strong>  <%= design.sapnum %></p>
            <p><strong>Type:</strong>  <%= design.type %></p>
            <p><strong>Head type:</strong>  <%= design.headtype %></p>
            <p><strong>Aperture width:</strong>  <%= design.apwidth %></p>
            <p><strong>Aperture height:</strong>  <%= design.apheight %></p>
            <p><strong>Sistem type:</strong>  <%= design.systemtype %></p>
            <p><strong>Reject:</strong>  <%= design.reject %></p>
            <p><strong>Conveyor infeed height:</strong>  <%= design.convinheight %></p>
            <p><strong>Conveyor outfeed height:</strong>  <%= design.convoutheight %></p>
            <p><strong>Conveyor length:</strong>  <%= design.convlength %></p>
            <p><strong>Handing:</strong>  <%= design.handing %></p>
            <p><strong>Belt type:</strong>  <%= design.belttype %></p>
            <p><strong>Product:</strong>  <%= design.product %></p>
            <p><strong>Packaging:</strong>  <%= design.packaging %></p>
            <p><strong>MO Agent:</strong>  <%= design.moagent %></p>
            <p><strong>End user:</strong>  <%= design.enduser %></p>           
            <p><strong>Notes:</strong>  <%= design.notes %></p>
            <p><strong>Date:</strong> <%= design.date.toDateString() %> </p>
            <p><strong>Engineer:</strong>  <%= design.engineer %></p>
        </div>
        <div class="card-footer">
            
                <% if(!currentUser){%>
                    <% } else { %>
                <div class="row">   
                    <div class="col">
                        <a class="btn btn-outline-warning btn-block" href="/designs/<%= design.id %>/edit">EDIT</a>
                    </div>     
                    <div class="col">
                        <form  action="/designs/<%= design._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger btn-block">DELETE</button>
                        <% } %>
                        </form>
                    </div>
                    
                    <!-- <% design.comments.forEach(function(comment){ %>
                    <p><%= comment.author %> -- <%= comment.text %></p>
                    <% }) %> -->
            </div>
                
        </div>
    </div>
</div>


    
    <% include .././partials/footer %>