<% include ././partials/header %>


<div class="container d-flex p-10 justify-content-center">
    <div class="jumbotron">
        <h1>Log In</h1>
        <form class="needs-validation" action="/login" method= "POST" novalidate>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="validationCustom01" class="form-control" name="username" placeholder="Enter username" required>
                    <div class="invalid-feedback">
                            Please enter username!
                        </div>
                </div>   
              
             <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter password" required>
                <div class="invalid-feedback">
                        Please enter a password!
                </div>
            </div>   
            
            <button type="submit" id="validationCustom01" class="btn btn-primary">LOG IN</button>    
        </form>

    </div>
</div>    

